---
import Ga from '../components/Ga.astro';
import '../styles/global.css';

interface Props {
  title?: string | undefined;
  description?: string | undefined;
}

const {
  title = '翔ラボ',
  description = 'フリーランスWebエンジニア翔ラボのポートフォリオサイト',
} = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" property="og:description" content={description} />
    <meta property="og:image" content="/assets/logo_180x180.png" />
    <meta property="og:url" content="https://sholab.net" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="翔ラボポートフォリオ" />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://sholab.net" />
    <meta property="twitter:site" content="@fly_highup_air" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link
      rel="apple-touch-icon"
      type="image/png"
      href="/icons/apple-touch-icon-180x180.png"
    />
    <link rel="icon" type="image/png" href="/icons/icon-192x192.png" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <Ga />
  </head>
  <body>
    <slot />
  </body>
</html>
